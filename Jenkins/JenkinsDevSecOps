def buildno = BUILD_NUMBER
pipeline {
    agent any
    tools {
	
        maven "maven3.6.3"
    }
	
    stages {
      	
         stage('Build'){
             steps{
		    sh "mvn clean package"
	              }
        } 
	   
	    stage('Deploy'){
             steps{
		    sshagent(['tomcat credentials']) {
                   sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/DevSecOps/target/*.war ubuntu@13.230.9.67:/var/lib/apache-tomcat-9.0.70/webapps" 
                  }
              }
        } 
		
		stage('OWASP ZAP'){
             steps{
	                      sh "echo $USER"
		             sh'docker run -v $(pwd)/zap-report:/zap/wrk/:rw -t owasp/zap2docker-stable zap-full-scan.py -t http://13.230.9.67:8080/demo-2.0.0-SNAPSHOT -j -a -r stable-full-scan-report.html 2> /dev/null; (($? == 2)) && echo 'Done' >&2' 
	              }
        }

     }

}
