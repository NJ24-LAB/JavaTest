def buildno = BUILD_NUMBER
pipeline {
    agent any
    
    tools {
        maven "maven3.6.3"
    }
	
    stages {
      	
       stage('Build'){
             steps{
		    sh "mvn clean package"
	              }
          } 
	
	   
	  stage('Deploy'){
             steps{
		    ansiblePlaybook credentialsId: 'tomcat credentials', disableHostKeyChecking: true, installation: 'ansible', inventory: 'dev.inv', playbook: 'Deploy.yml'
              }
        }
	  
     }

}
